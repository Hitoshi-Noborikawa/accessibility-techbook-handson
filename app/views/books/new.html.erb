<h1 class='mb-4'>書籍登録</h1>

<div class='card'>
  <div class='card-body'>
    <%= form_with(model: @book, local: true) do |f| %>
      <%= render 'fields', f: f, book: @book %>

      <div class="d-flex gap-3">
        <%= f.submit '作成する', class: 'btn btn-primary' %>
        <%= link_to 'キャンセル', books_path, class: 'btn btn-outline-secondary' %>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-3">
  <%= link_to '一覧に戻る', books_path %>
</div>
