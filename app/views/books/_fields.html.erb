<% if book.errors.any? %>
  <div class="alert alert-danger">
    <h4>エラーが発生しました:</h4>
    <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mb-3">
  <%= f.label 'タイトル', class: 'form-label' %>
  <%= f.text_field :title, class: 'form-control', required: true, placeholder: "書籍のタイトルを入力" %>
</div>

<div class="mb-3">
  <%= f.label '著者', class: 'form-label' %>
  <%= f.text_field :author, class: 'form-control', required: true, placeholder: "著者名を入力" %>
</div>

<div class="mb-3">
  <%= f.label '出版社', class: 'form-label' %>
  <%= f.text_field :publisher, class: 'form-control', placeholder: "出版社名を入力" %>
</div>

<div class="mb-3">
  <%= f.label '出版日', class: 'form-label' %>
  <%= f.date_field :published_on, class: 'form-control', placeholder: "出版日を選択" %>
</div>

<div class="mb-3">
  <%= f.label '概要', class: 'form-label' %>
  <%= f.text_area :description, class: 'form-control', rows: 5, placeholder: "書籍の概要を入力..." %>
</div>

<div class="mb-3">
  <%= f.label 'レビュー', class: 'form-label' %>
  <%= f.text_area :review, class: 'form-control', rows: 5, placeholder: "書籍のレビューを入力..." %>
</div>
